rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // All files under uploads/{uid}/... are writable only by that authenticated uid and publicly readable
    match /uploads/{userId}/{allPaths=**} {
      // Allow read for everyone (public downloads)
      allow read: if true;

      // Allow write/create if authenticated and writing into their own folder, and file size limit 200MB
      allow write: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 200 * 1024 * 1024;

      // Allow delete if owner
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny other paths
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
