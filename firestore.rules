// Firestore security rules: users can read/write only their own user document
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: allow read/write only to the authenticated owner
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Uploads collection: public read, authenticated create, owner-only update/delete
    match /uploads/{uploadId} {
      // Public can read uploads (listing)
      allow read: if true;

      // Create only if authenticated and assigning userId equal to auth.uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Update/delete only if authenticated and owner
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
